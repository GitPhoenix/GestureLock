<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f8f8f8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="32dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_gesture_verify_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/img_zsd_logo"/>

        <TextView
            android:id="@+id/tv_gesture_verify_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_horizontal"
            android:textColor="#999999"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_gesture_verify_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:textColor="#ef5a50"
            android:textSize="14sp"
            android:visibility="invisible"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_gesture_verify_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fl_gesture_verify_container"
        android:layout_marginTop="32dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_gesture_verify_forget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="@string/gesture_verify_forgot"
            android:textColor="#999999"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_gesture_verify_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="@string/gesture_verify_login"
            android:textColor="#999999"
            android:textSize="16sp"/>

    </LinearLayout>

</RelativeLayout>